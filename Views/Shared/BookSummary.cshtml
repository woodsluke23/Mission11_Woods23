@{
}

@model Book

<div class="card m-3 p-1">
    <h4>
        @Model.Title
        <span class="badge rounded-pill bg-primary text-white float-end m-1 p-1"><small>@Model.Category</small></span>
    </h4>

    <ul>
        <li>Author: @Model.Author</li>
        <li>Publisher: @Model.Publisher</li>
        <li>ISBN: @Model.Isbn</li>
        <li>Classification: @Model.Classification</li>
        <li>Number of Pages: @Model.PageCount</li>
        <li>Price: @Model.Price</li>
    </ul>
</div>